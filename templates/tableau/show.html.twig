{% extends 'base.html.twig' %}

{% block title %}Tableau{% endblock %}

{% block main %}
    <h1>Tableau</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tableau.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tableau.description }}</td>
            </tr>
            <tr>
                <th>Publie</th>
                <td>{{ tableau.publie ? 'Yes' : 'No' }}</td>
            </tr>

            <tr>
                <th>Souvenirs</th>
                <td>{% for souv in tableau.souvenir %}
                <a class="btn btn-outline-dark btn-sm " href="{{ path('app_tableau_souvenir_show', {'tableau_id': tableau.id, 'souv_id' : souv.id}) }}">{{ souv }}</a>
                &nbsp &nbsp
                {% endfor %}</td>
            </tr>


            
        </tbody>
    </table>

    <table class="table">
        {% if is_granted('ROLE_USER') %}
          <a href="{{ path('app_tableau_edit', {'id': tableau.id}) }}" class = "btn btn-secondary btn-sm" role="button">Editer ce tableau</a>
       {%endif%}
        &nbsp
         </table>
    
        <table class="table">
        <a href="{{ path('app_tableau_index') }}" class = "btn btn-dark btn-sm" role="button">Retour Ã  la liste</a>
        &nbsp
        {% if is_granted('ROLE_ADMIN') %}
            {{ include('tableau/_delete_form.html.twig') }}
        {%endif%}
        </table>
    

{% endblock %}
