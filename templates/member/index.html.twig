{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block main %}
<h1>Liste des membres</h1>


<!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <div class="col mb-5">
                        <div class="card h-100">
                            {% for member in members %}
                                <!-- Photo du membre-->
                                <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                                <!-- Infos sur le membre-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Member name-->
                                        <h5 class="fw-bolder">{{ member.name }}</h5>
                                    </div>
                                </div>
                                <!-- Voir ce membre-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="{{ path('app_member_show', {'id': member.id}) }}">Voir les albums de ce membre</a></div>
                                </div>
                        </div>
                    </div>
                    <div class="col mb-5">
                        <div class="card h-100">
                    {% endfor %} {#members#}
                        </div>
                </div>
            </div>
        </div>
    </section>

    <a href="{{ path('app_member_new') }}" class = "btn btn-secondary" role="button">Nouveau membre</a>


{% endblock %} {# main #}


