{% extends 'base.html.twig' %}
{% block title %}Liste des albums{% endblock %}

{% block main %}
<h1>Liste des albums</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Propri√©taire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.name }}</td>
                <td>{{ album.member }} </td>
                <td>
                    <a class="btn btn-outline-dark mt-auto" href="{{ path('app_album_show', {'id': album.id}) }}">Consulter l'album</a>
                 </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


