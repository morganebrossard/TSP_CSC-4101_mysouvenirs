{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block body %}
<h1>Liste des albums</h1>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Album</th>
            <th>Member</th>
            <th> &nbsp;</th>
        </tr>
    </thead>
    <tbody>

         {% for album in albums %}

            <tr>
                <td>{{album.id}}</td>
                <td>{{album.name}}</td> 
                <td>{{album.member}}</td>  
                <td><a href="{{ path('album_show', {'id': album.id}) }}">show</a></td>

            </tr>  
         {% endfor %} {# albums #}
    </tbody>
</table>
{% endblock %} {# body #}