{% extends 'base.html.twig' %}

{% block title %}Albums{% endblock %}

  {% block main %}
      <h1>Bienvenue dans : {{ album.name }} </h1> 

         {% dump album %}


      <table class="table table-light">
      <thead>
        <tr>
            <th>Souvenirs</th>
            <th> &nbsp </th>

        </tr>
    </thead>
    <tbody>    
                   
         {% for souv in album.souvenir %}
         <tr>
                <td>{{ souv }}</td>
                <td> <a class="btn btn-outline-dark btn-sm " href="{{ path('app_souvenir_show', {'id': souv.id}) }}">Voir ce souvenir</a></td>
         </tr>
         {% endfor %} {# souvenirs #}

          </tbody>
  
          <table class="table">
            {% if is_granted('ROLE_USER') %}
              <a href="{{ path('app_album_edit', {'id': album.id}) }}" class = "btn btn-secondary btn-sm" role="button">Editer cet album</a>
            {%endif%}
            &nbsp
            {% if is_granted('ROLE_USER') %}
              <a href="{{ path('app_souvenir_new', {'id': album.id}) }}" class = "btn btn-success btn-sm" role="button">Ajouter un nouveau souvenir</a>
            {%endif%}
          </table>
        
            <table class="table">
            <a href="{{ path('app_album_index') }}" class = "btn btn-dark btn-sm" role="button">Retour Ã  la liste</a>
            &nbsp

            {% if is_granted('ROLE_ADMIN') %}
              {{ include('album/_delete_form.html.twig') }}
            {%endif%}  
            </table>


  {% endblock %} {# main #}


