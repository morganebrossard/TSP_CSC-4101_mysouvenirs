{% extends 'base.html.twig' %}

{% block title %}Souvenirs{% endblock %}

  {% block body %}
      <h1>Souvenir</h1>

         {% dump souvenir %}

      <table class="table">
          <tbody>
              <tr>
                  <th>Id</th>
                  <td>{{ souvenir.id }}</td>
              </tr>
              <tr>
                  <th>Title</th>
                  <td>{{ souvenir.title }}</td>
              </tr>      
              <tr>
                  <th>Date</th>
                  <td>{{ souvenir.date ? souvenir.date|date('Y-m-d H:i:s') : '' }}</td>
              </tr>
              <tr>
                  <th>Album</th>
                  <td>{{ souvenir.album }}</td>
              </tr>           
                         
                   


          </tbody>
      </table>

      <a href="{{ path('souvenirs_list') }}">back to list</a>

  {% endblock %}