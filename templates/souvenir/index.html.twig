{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block main %}
<h1>Liste des souvenirs</h1>

<!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <div class="col mb-5">
                        <div class="card h-100">
                            {% for souvenir in souvenirs %}
                                <!-- Photo du souvenir-->
                                <img class="card-img-top" src="{{ vich_uploader_asset(souvenir, 'imageFile') }}" />
                                <!-- Infos sur le souvenir-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Souvenir name-->
                                        <h5 class="fw-bolder">{{ souvenir.title }}</h5>
                                    </div>
                                </div>
                                <!-- Voir ce souvenir-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="{{ path('app_souvenir_show', {'id': souvenir.id}) }}">DÃ©couvrir ce souvenir</a></div>
                                </div>
                        </div>
                    </div>
                    <div class="col mb-5">
                        <div class="card h-100">
                    {% endfor %} {#souvenirs#}
                        </div>
                </div>
            </div>
        </div>
    </section>

